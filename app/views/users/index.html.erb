<div class="main users-index">
  <div class="container">
    <h1 class="users-heading">ユーザー一覧</h1>

    <% @users.each do |user| %>
    <div class="users-index-item">
      <div class="user-left">
        <img class="about-img" src="<%= user.image_source_path %>" />
      </div>
      <div class="user-right">
        <%= link_to(user.name, user) %>
      </div>
    </div>
    <% end %>
  </div>
</div>