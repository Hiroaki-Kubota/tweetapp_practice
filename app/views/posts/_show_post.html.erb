<div class="posts-index-item">
  <div class="post-left">
    <%= image_tag user_image_path(post.user) %>
  </div>
  <div class="post-right">
    <div class="post-user-name">
      <%= link_to(post.user&.name, post.user) %>
    </div>
    <%= link_to(simple_format(post.content), post) %>
  </div>
</div>