<div class="main posts-show">
    <div class="container">
        <div class="posts-show-item">
            <p>
                <%= @post.content %>
            </p>
            <div class="post-time">
                <%= @post.created_at %>
            </div>
            <ul class="post-menus">
                <li>
                    <%= link_to "編集" , edit_post_path(@post) %>
                </li>
                <li>
                    <%= link_to "削除" , :post, :method => :delete %>
                </li>
            </ul>
        </div>
    </div>
</div>