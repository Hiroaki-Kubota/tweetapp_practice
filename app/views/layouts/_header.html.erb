<header>
  <div class="header-logo">
    <% if @current_user %>
    <%= link_to('TweetApp', :posts) %>
    <% else %>
    <%= link_to('TweetApp', '/') %>
    <% end %>
  </div>
  <ul class="header-menus">
    <% if @current_user %>
    <li>
      <%= link_to(@current_user) do %>
        <%= image_tag user_image_path(@current_user) %>
      <% end %>
    </li>
    <li>
      <%= link_to("投稿一覧", :posts) %>
    </li>
    <li>
      <%= link_to("新規投稿", :new_post) %>
    </li>
    <li>
      <%= link_to("ユーザー一覧", :users) %>
    </li>
    <li>
      <%= link_to("メッセージ", :messages) %>
    </li>
    <li>
      <%= link_to("ログアウト", :logout, method: :post) %>
    </li>
    <% else %>
    <li>
      <%= link_to("TweetAppとは", :about) %>
    </li>
    <li>
      <%= link_to("新規登録", :new_user) %>
    </li>
    <li>
      <%= link_to("ログイン", :login) %>
    </li>
    <% end %>
  </ul>
</header>